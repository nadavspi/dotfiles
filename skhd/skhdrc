# focus window
alt - h : yabai -m window --focus west || yabai -m display --focus prev || yabai -m window --focus last
alt - j : yabai -m window --focus south
alt - k : yabai -m window --focus north
alt - l : yabai -m window --focus east || yabai -m display --focus next || yabai -m window --focus first

# alt - m : yabai -m window --focus stack.next || yabai -m window --focus stack.first
# alt - 0x2B : yabai -m window --focus stack.prev || yabai -m window --focus stack.last # comma


# swap managed window
alt + cmd - h : yabai -m window --swap west
alt + cmd - j : yabai -m window --swap south
alt + cmd - k : yabai -m window --swap north
alt + cmd - l : yabai -m window --swap east

shift + alt + cmd - h : yabai -m window --warp west
shift + alt + cmd - j : yabai -m window --warp south
shift + alt + cmd - k : yabai -m window --warp north
shift + alt + cmd - l : yabai -m window --warp east

# focus space 
cmd + shift - 1  : yabai -m space --focus 1
cmd + shift - 2  : yabai -m space --focus 2
cmd + shift - 3  : yabai -m space --focus 3
shift + alt - 1  : yabai -m space --focus 4
shift + alt - 2  : yabai -m space --focus 5
shift + alt - 3  : yabai -m space --focus 6

# move window and focus space
# cmd + alt - h : yabai -m window --space prev; yabai -m space --focus prev
# cmd + alt - i : yabai -m window --space next; yabai -m space --focus next

# send window to monitor and follow focus
alt + shift - h : yabai -m window --display prev; yabai -m display --focus prev
alt + shift - l : yabai -m window --display next; yabai -m display --focus next

# increase window size
shift + cmd - a : yabai -m window --resize left:-20:0
shift + cmd - s : yabai -m window --resize bottom:0:20
shift + cmd - d : yabai -m window --resize top:0:-20
shift + cmd - f : yabai -m window --resize right:20:0

# decrease window size
shift + alt - a : yabai -m window --resize left:20:0
shift + alt - s : yabai -m window --resize bottom:0:-20
shift + alt - d : yabai -m window --resize top:0:20
shift + alt - f : yabai -m window --resize right:-20:0

# balance size of windows
# shift + cmd - d : yabai -m space --balance

# toggle window fullscreen zoom
alt - f : yabai -m window --toggle zoom-fullscreen

# create stack in direction
# hyper - left  : yabai -m window west --stack $(yabai -m query --windows --window | jq -r '.id')
# hyper - down  : yabai -m window south --stack $(yabai -m query --windows --window | jq -r '.id')
# hyper - up    : yabai -m window north --stack $(yabai -m query --windows --window | jq -r '.id')
# hyper - right : yabai -m window east --stack $(yabai -m query --windows --window | jq -r '.id')


# float / unfloat window and center on screen
alt - t : yabai -m window --toggle float --grid 4:4:1:1:2:2d

