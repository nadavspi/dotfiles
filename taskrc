news.version=2.6.0
data.location=~/.task/data
hooks.location=~/.task/hooks

default.project=in

report.s.columns = id,project,description.count,parent,start,scheduled,due,until
report.s.description = Strategic
report.s.filter = status:pending
report.s.sort = project+/,entry+

report.next.columns = id,project,description,start.age,scheduled
report.next.description = Tactical
report.next.filter = status:pending and +DUE or +OVERDUE or +ACTIVE or (+READY and +SCHEDULED)
report.next.sort = start+,scheduled+,project+,entry+
report.next.labels = ID,Proj,Desc,Started,Scheduled

color.blocking = none
uda.reviewed.type=date
uda.reviewed.label=Reviewed
report._reviewed.description=Tasksh review report.  Adjust the filter to your needs.
report._reviewed.columns=uuid
report._reviewed.sort=reviewed+,modified+
report._reviewed.filter=( reviewed.none: or reviewed.before:now-6days ) and ( +PENDING or +WAITING )
