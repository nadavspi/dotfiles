# thanks https://grtcdr.tn/dotfiles/sway/sway.html
### variables
# keys
set $super Mod4
set $alt Mod1
set $left m
set $down n
set $up e
set $right i
set $mod Mod1

set $term kitty
# set $launcher ulauncher-toggle
set $launcher rofi -show drun
set $windows rofi -show window

### Key bindings
# Drag floating windows by holding down $mod and left mouse button.
# floating_modifier $mod normal

# launching
bindsym $mod+Return exec $term
bindsym $mod+b exec firefox
bindsym $mod+Shift+q kill
bindsym Control+Space exec $launcher
bindsym $super+Shift+Tab exec $windows
bindsym $mod+Shift+c reload

# focus
bindsym $mod+$left focus left
bindsym $mod+$down focus down
bindsym $mod+$up focus up
bindsym $mod+$right focus right

# move
bindsym $mod+$super+$left move left
bindsym $mod+$super+$down move down
bindsym $mod+$super+$up move up
bindsym $mod+$super+$right move right

# workspaces
set $ws1 1
set $ws2 2
set $ws3 3
set $ws4 4
set $ws5 5

bindsym  $mod+l      workspace $ws1
bindsym  $mod+u      workspace $ws2
bindsym  $mod+y      workspace $ws3
bindsym  $mod+apostrophe      workspace $ws4
bindsym  $mod+j      workspace $ws5
bindsym  $mod+tab    workspace back_and_forth

bindsym  $mod+$super+l  move container to workspace $ws1; workspace $ws1
bindsym  $mod+$super+u  move container to workspace $ws2; workspace $ws2
bindsym  $mod+$super+y  move container to workspace $ws3; workspace $ws3
bindsym  $mod+$super+apostrophe  move container to workspace $ws4; workspace $ws4
bindsym  $mod+$super+j  move container to workspace $ws5; workspace $ws5

workspace_auto_back_and_forth yes
assign [class="Emacs"] $ws1
assign [class="obsidian"] $ws2
assign [class="discord"] $ws3

### layout
bindsym $mod+h splith
bindsym $mod+v splitv
bindsym $mod+t layout tabbed
bindsym $mod+o layout toggle split
bindsym $mod+f fullscreen

    # Toggle the current focus between tiling and floating mode
bindsym $mod+Shift+space floating toggle
    # Swap focus between the tiling area and the floating area
bindsym $mod+space focus mode_toggle
floating_modifier $mod

for_window [window_role="pop-up"] floating enable
for_window [window_role="task_dialog"] floating enable

bindsym $mod+a focus parent

### scratchpad
bindsym $mod+Shift+grave move scratchpad
bindsym $mod+grave scratchpad show

### resizing
set $resize_factor 40px
bindsym $mod+r mode "resize"
mode "resize" {
    bindsym $left resize shrink width $resize_factor
    bindsym $down resize grow height $resize_factor
    bindsym $up resize shrink height $resize_factor
    bindsym $right resize grow width $resize_factor
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

### media
bindsym XF86AudioMute exec pactl set-sink-mute @DEFAULT_SINK@ toggle
bindsym XF86AudioRaiseVolume exec pactl set-sink-volume @DEFAULT_SINK@ +5%
bindsym XF86AudioLowerVolume exec pactl set-sink-volume @DEFAULT_SINK@ -5%
bindsym $super+Shift+m exec pactl set-source-mute 51 toggle

### aesthetics
font pango:Ubuntu 12
set $red #c72835
set $primary #bebad4
set $orange #d9a479
set $lightgrey #d3d3d3
set $purple #5d178f
set $darkpurple #1b191f
set $cyan #2baec2
# class                 border       backgr.      text        indicator child_border
client.focused          $purple      $purple      $primary     $cyan
client.focused_inactive $purple  $darkpurple  $primary $darkpurple
client.unfocused        $darkpurple  $darkpurple  $primary $darkpurple
client.urgent           $red         $red         $primary


gaps inner 10px
gaps bottom 45px
default_border pixel 5
default_floating_border none

exec --no-startup-id feh --bg-fill /mnt/nfs/docs/Archive/10-19\ Personal\ documents/16\ Collections/16.03\ Wallpapers/wallpaperflare.com_wallpaper.jpg
exec_always --no-startup-id $HOME/.config/polybar/launch.sh
# exec mako
# exec wlsunset -l 41 -L 74
exec --no-startup-id ulauncher --hide-window 1 > /var/log/ulauncher/ulauncher.log 2>&1
# exec systemctl --user import-environment
