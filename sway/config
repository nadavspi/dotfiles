# thanks https://grtcdr.tn/dotfiles/sway/sway.html
### variables
# keys
set {
    $super Mod4
    $alt Mod1
    $left m
    $down n
    $up e
    $right i
}
set $mod $alt

set $term kitty
set $launcher ulauncher-toggle | xargs swaymsg exec --
set $windows rofi -show window | xargs swaymsg exec --

### Key bindings
# Drag floating windows by holding down $mod and left mouse button.
floating_modifier $mod normal

# launching
bindsym {
    $mod+Return exec $term
    $mod+b exec firefox
    $mod+Shift+q kill
    Control+Space exec $launcher
    $super+Shift+Tab exec $windows
    $mod+Shift+c reload
}

# focus
bindsym {
    $mod+$left focus left
    $mod+$down focus down
    $mod+$up focus up
    $mod+$right focus right
}

# move
bindsym {
    $mod+$super+$left move left
    $mod+$super+$down move down
    $mod+$super+$up move up
    $mod+$super+$right move right
}

# workspaces
set {
    $ws1  "1: l"
    $ws2  "2: u"
    $ws3  "3: y"
    $ws4  "4: '"
    $ws5  "5: j"
}
bindsym {
  $mod+l      workspace $ws1
  $mod+u      workspace $ws2
  $mod+y      workspace $ws3
  $mod+apostrophe      workspace $ws4
  $mod+j      workspace $ws5
  $mod+tab    workspace back_and_forth
}
bindsym {
  $mod+$super+l  move container to workspace $ws1; workspace $ws1
  $mod+$super+u  move container to workspace $ws2; workspace $ws2
  $mod+$super+y  move container to workspace $ws3; workspace $ws3
  $mod+$super+apostrophe  move container to workspace $ws4; workspace $ws4
  $mod+$super+j  move container to workspace $ws5; workspace $ws5
}

assign {
    [class="Emacs"] $ws1
    [class="obsidian"] $ws2
    [class="discord"] $ws3
}

### layout
bindsym {
    $mod+minus splith
    $mod+bar splitv
    $mod+t layout tabbed
    $mod+o layout toggle split
    $mod+f fullscreen

    # Toggle the current focus between tiling and floating mode
    $mod+Shift+space floating toggle
    # Swap focus between the tiling area and the floating area
    $mod+space focus mode_toggle

    $mod+a focus parent
}

### scratchpad
bindsym {
    $mod+Shift+grave move scratchpad
    $mod+grave scratchpad show
}

### resizing
set $resize_factor 40px
bindsym $mod+r mode "resize"
mode "resize" {
    bindsym $left resize shrink width $resize_factor
    bindsym $down resize grow height $resize_factor
    bindsym $up resize shrink height $resize_factor
    bindsym $right resize grow width $resize_factor
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

### media
bindsym {
    XF86AudioMute exec pactl set-sink-mute @DEFAULT_SINK@ toggle
    XF86AudioRaiseVolume exec pactl set-sink-volume @DEFAULT_SINK@ +5%
    XF86AudioLowerVolume exec pactl set-sink-volume @DEFAULT_SINK@ -5%
}

### aesthetics
font pango:"Tundra Offc" 16
set {
    $base06   #2E3440
    $base05   #3B4252
    $base04   #434C5E
    $base03   #4C566A
    $base02   #D8DEE9
    $base01   #E5E9F0
    $base00   #ECEFF4
    $blue     #5E81AC
    $yellow   #EBCB8B
    $orange   #D08770
    $red      #BF616A
    $magenta  #B48EAD
    $green    #A3BE8C
}
client.focused            $orange  $orange  #333333  $magenta

client.focused_inactive   $base04  $base04  $base00
client.unfocused          $base03  $base03  $base00
client.urgent             $red     $red     $red

output * bg /mnt/nfs/docs/Archive/10-19\ Personal\ documents/16\ Collections/16.03\ Wallpapers/wallpaperflare.com_wallpaper.jpg fill

gaps inner 10px
default_border pixel 4
default_floating_border none

bar {
    swaybar_command waybar
}

exec mako
exec ulauncher --hide-window 1 > /var/log/ulauncher/ulauncher.log 2>&1
exec systemctl --user import-environment
