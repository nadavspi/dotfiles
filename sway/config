# thanks https://grtcdr.tn/dotfiles/sway/sway.html
### variables
# keys
set {
    $super Mod4
    $alt Mod1
    $left m
    $down n
    $up e
    $right i
}
set $mod $alt

set $term kitty
set $launcher rofi -show drun | xargs swaymsg exec --
set $windows rofi -show window | xargs swaymsg exec --

### Key bindings
# Drag floating windows by holding down $mod and left mouse button.
floating_modifier $mod normal

# launching
bindsym {
    $mod+Return exec $term
    $mod+b exec firefox
    $mod+Shift+q kill
    Control+Space exec $launcher
    $super+Shift+Tab exec $windows
    $mod+Shift+c reload
}

# focus
bindsym {
    $mod+$left focus left
    $mod+$down focus down
    $mod+$up focus up
    $mod+$right focus right
}

# move
bindsym {
    $mod+$super+$left move left
    $mod+$super+$down move down
    $mod+$super+$up move up
    $mod+$super+$right move right
}

# workspaces
set {
    $ws1  "1: l"
    $ws2  "2: u"
    $ws3  "3: y"
    $ws4  "4: \'"
    $ws5  "5: q"
    $ws6  "6: w"
    $ws7  "7: f"
    $ws8  "8: p"
}
bindsym {
  $mod+l      workspace $ws1
  $mod+u      workspace $ws2
  $mod+y      workspace $ws3
  $mod+apostrophe workspace $ws4
  $mod+q      workspace $ws5
  $mod+w      workspace $ws6
  $mod+f      workspace $ws7
  $mod+p      workspace $ws8
  $mod+tab    workspace back_and_forth
}
bindsym {
  $mod+$super+q  move container to workspace $ws1; workspace $ws1
  $mod+$super+w  move container to workspace $ws2; workspace $ws2
  $mod+$super+f  move container to workspace $ws3; workspace $ws3
  $mod+$super+p  move container to workspace $ws4; workspace $ws4
  $mod+$super+l  move container to workspace $ws5; workspace $ws5
  $mod+$super+u  move container to workspace $ws6; workspace $ws6
  $mod+$super+y  move container to workspace $ws7; workspace $ws7
}

### layout
bindsym {
    $mod+minus splith
    $mod+bar splitv
    $mod+t layout tabbed
    $mod+o layout toggle split
    # $mod+f fullscreen

    # Toggle the current focus between tiling and floating mode
    $mod+Shift+space floating toggle
    # Swap focus between the tiling area and the floating area
    $mod+space focus mode_toggle

    $mod+a focus parent
}

### scratchpad
bindsym {
    $mod+Shift+grave move scratchpad
    $mod+grave scratchpad show
}

### resizing
set $resize_factor 40px
bindsym $mod+r mode "resize"
mode "resize" {
    bindsym $left resize shrink width $resize_factor
    bindsym $down resize grow height $resize_factor
    bindsym $up resize shrink height $resize_factor
    bindsym $right resize grow width $resize_factor
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

### aesthetics
font pango:"Tundra Offc" 16
set {
    $base06   #2E3440
    $base05   #3B4252
    $base04   #434C5E
    $base03   #4C566A
    $base02   #D8DEE9
    $base01   #E5E9F0
    $base00   #ECEFF4
    $blue     #5E81AC
    $yellow   #EBCB8B
    $orange   #D08770
    $red      #BF616A
    $magenta  #B48EAD
    $green    #A3BE8C
}
client.focused            $orange  $orange  #333333  $magenta
client.focused_inactive   $base04  $base04  $base00
client.unfocused          $base03  $base03  $base00
client.urgent             $red     $red     $red

gaps inner 10px
default_border pixel 4

bar {
    swaybar_command waybar
}

exec mako
exec systemctl --user import-environment
include ~/src/sway-ubuntu/sway/config.d/*
