# focus window
alt - h : yabai -m window --focus west || yabai -m display --focus prev
alt - n : yabai -m window --focus south
alt - e : yabai -m window --focus north
alt - i : yabai -m window --focus east || yabai -m display --focus next

# swap managed window
# todo: send to next display
shift + alt - h : yabai -m window --swap west
shift + alt - n : yabai -m window --swap south
shift + alt - e : yabai -m window --swap north
shift + alt - i : yabai -m window --swap east

# focus space 
cmd + shift - 1  : yabai -m space --focus 1
cmd + shift - 2  : yabai -m space --focus 2
cmd + shift - 3  : yabai -m space --focus 3
shift + alt - 1  : yabai -m space --focus 4
shift + alt - 2  : yabai -m space --focus 5
shift + alt - 3  : yabai -m space --focus 6

# move window and focus space
cmd + alt - h : yabai -m window --space prev; yabai -m space --focus prev
cmd + alt - i : yabai -m window --space next; yabai -m space --focus next

# send window to monitor and follow focus
ctrl + cmd - h : yabai -m window --display prev; yabai -m display --focus prev
ctrl + cmd - i : yabai -m window --display next; yabai -m display --focus next

# increase window size
shift + cmd - a : yabai -m window --resize left:-20:0
shift + cmd - r : yabai -m window --resize bottom:0:20
shift + cmd - s : yabai -m window --resize top:0:-20
shift + cmd - t : yabai -m window --resize right:20:0

# decrease window size
shift + alt - a : yabai -m window --resize left:20:0
shift + alt - r : yabai -m window --resize bottom:0:-20
shift + alt - s : yabai -m window --resize top:0:20
shift + alt - t : yabai -m window --resize right:-20:0

# balance size of windows
shift + cmd - d : yabai -m space --balance

# toggle window fullscreen zoom
alt - f : yabai -m window --toggle zoom-fullscreen

# float / unfloat window and center on screen
alt - t : yabai -m window --toggle float --grid 4:4:1:1:2:2d